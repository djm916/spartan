<project name="Spartan">
  <property name="src.dir"     value="src"/>
  <property name="build.dir"   value="build"/>
  <property name="doc.dir"     value="doc"/>
  <property name="main-class"  value="spartan.Main"/>
    
  <target name="clean">
    <delete dir="${build.dir}"/>
  </target>

  <target name="compile">
    <mkdir dir="${build.dir}"/>
    <javac srcdir="${src.dir}" destdir="${build.dir}" debug="true" includeantruntime="false">
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar destfile="./Spartan.jar" basedir="${build.dir}">
      <manifest>
        <attribute name="Main-Class" value="${main-class}"/>
      </manifest>
    </jar>
  </target>
  
  <target name="run" depends="jar">
    <java jar="./Spartan.jar" fork="true">
      <arg value="-Xprof"/>
    </java>
  </target>
  
  <target name="doc">
    <mkdir dir="${doc.dir}"/>
    <javadoc sourcepath="${src.dir}" destdir="${doc.dir}"/>
  </target>
</project>
