<project name="Spartan">
  <property name="src.dir"     value="src"/>
  <property name="build.dir"   value="build"/>
  <property name="doc.dir"     value="doc"/>
  <property name="jar-file"    value="Spartan.jar"/>
  <property name="main-class"  value="spartan.Main"/>
  <property name="classpath"   value="C:/JUnit/junit.jar"/>
  <property name="tests.dir"   value="tests"/>
  
  <target name="clean">
    <delete dir="${build.dir}"/>
    <delete dir="${doc.dir}"/>
  </target>

  <target name="compile">
    <mkdir dir="${build.dir}"/>
    <javac srcdir="${src.dir}"
           destdir="${build.dir}"
           debug="true"
           includeantruntime="false"
           classpath="${classpath}">
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar destfile="${jar-file}"
         basedir="${build.dir}"
         excludes="**/${tests.dir}/**">
      <manifest>
        <attribute name="Main-Class" value="${main-class}"/>
      </manifest>
    </jar>
  </target>
  
  <target name="run" depends="jar">
    <java jar="${jar-file}" fork="true">
      <arg value="-Xprof"/>
    </java>
  </target>
  
  <target name="doc">
    <mkdir dir="${doc.dir}"/>
    <javadoc sourcepath="${src.dir}" destdir="${doc.dir}"/>
  </target>
  
  <target name="test" depends="compile">
    <junit showoutput="yes" printsummary="withOutAndErr" fork="true">
      <classpath path="${build.dir}"/>
      <test name="spartan.tests.ReaderTest"/>
    </junit>
  </target>

</project>
